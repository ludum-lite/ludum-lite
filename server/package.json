{
  "name": "server",
  "private": true,
  "scripts": {
    "start": "concurrently -n TSC,TYPEGEN,SERVERLESS \"yarn watch:ts\" \"yarn watch:schema\" \"yarn server:offline:start\"",
    "start:prod": "concurrently -n TSC,TYPEGEN,SERVERLESS \"yarn watch:ts\" \"yarn watch:schema\" \"yarn server:offline:start:prod\"",
    "watch:ts": "tsc --watch",
    "watch:schema": "graphql-codegen --watch --config codegen.yml",
    "server:offline:start": "serverless offline start --stage dev --httpPort=4000",
    "server:offline:start:prod": "serverless offline start --stage production --httpPort=4000",
    "deploy": "serverless deploy --stage=production"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.9.4",
    "apollo-server-lambda": "^2.18.1",
    "cuid": "^2.1.8",
    "dataloader": "^2.0.0",
    "dataloader-sort": "^0.0.5",
    "form-data": "^3.0.0",
    "graphql": "^15.0.0",
    "lodash": "^4.17.15",
    "qs": "^6.9.4",
    "raw-body": "^2.4.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.4",
    "@graphql-codegen/introspection": "1.13.4",
    "@graphql-codegen/schema-ast": "^1.13.5",
    "@graphql-codegen/typescript": "1.13.4",
    "@graphql-codegen/typescript-operations": "^1.17.0",
    "@graphql-codegen/typescript-resolvers": "1.13.4",
    "@types/lodash": "^4.14.149",
    "apollo": "^2.32.1",
    "concurrently": "^5.3.0",
    "prettier": "2.0.4",
    "serverless": "2.20.0",
    "serverless-domain-manager": "^5.1.0",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "^6.8.0",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "graphql": "^15.0.0"
  }
}
